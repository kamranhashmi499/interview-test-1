{{ 'logo-list.css' | asset_url | stylesheet_tag }}

  <section id = "section-logo-list-background--{{section.id}}">
  {%- if section.settings.title != blank -%}
    <header class="index-header"  {% render 'animations', type: 'fadeCycle' %}>
        <h2 class="section-text-color--{{section.id}}"> {{ section.settings.title | escape }}</h2>
    </header>
  {%- endif -%}


  {%- if section.blocks.size > 0 -%}
    <div class="logo-bar logo-bar--{{ section.id }}">
      {%- for block in section.blocks -%}
        <div class="logo-bar__item"
          {% capture delayAmount %}{% cycle '200', '400', '600', '800', '1000', '1200', '1400', '1600', '1800', '2000' %}{% endcapture %}
          {% render 'animations', type: 'fadeCycle', delay: delayAmount %}>

          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="logo-bar__link">
          {%- endif -%}
          {%- if block.settings.image != blank -%}
            {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="lazyload logo-bar__image"
                data-src="{{ img_url }}"
                data-widths="[180, 360, 540, 720]"
                data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ block.settings.image.alt }}">
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
</section>

<style>
  #section-logo-list-background--{{section.id}} {
    background-color: {{ section.settings.logo-list-background-color }};
    margin-top: -80px;
    padding-top: 40px;
    padding-bottom: 80px;
  }

  @media only screen and (max-width: 989px) {
    #section-logo-list-background--{{section.id}} {
    margin-top: -40px;
  }

  }

  .section-text-color--{{section.id}} {
    color: {{section.settings.logo-list-text-color}};
    padding-top: 25px;
  }

  {%- if section.settings.bottom_spacing -%}
    #section-logo-list-background--{{section.id}} {
        padding-bottom: 40px;
      }
    @media only screen and (min-width:768px) {
      #section-logo-list-background--{{section.id}} {
        padding-bottom: 0px;
      }
    }
  {%- endif -%}


</style>


{% schema %}
  {
    "name": "Logo list",
    "class": "index-section",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "logo-list-background-color",
        "label": {
            "en": "Background",
            "de": "Ankündigungshintergrund",
            "es": "Fondo del anuncio",
            "fr": "Contexte de l'annonce",
            "pt-PT": "Fundo do anúncio"
        },
        "default": "#242424"
      },
      {
          "type": "color",
          "id": "logo-list-text-color",
          "label": {
              "en": "Text",
              "de": "Ankündigungstext",
              "es": "Texto del anuncio",
              "fr": "Texte de l'annonce",
              "pt-PT": "Texto do anúncio"
          },
          "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "logo_opacity",
        "label": "Logo opacity",
        "default": 76,
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "%"
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "bottom_spacing",
        "label": "Reduce bottom spacing",
        "default": false
      }

    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo list",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
